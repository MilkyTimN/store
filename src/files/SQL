1. Category table:
create table tb_category
  (
      id serial primary key,
      name varchar(255)
  );

2. Product table:
create table tb_product
(
    id serial primary key,
    name varchar(255),
    categoryId int --> this is foreign key
);

3. Product details table
create table tb_product_details
(
    id serial primary key,
    productId int,
    brand varchar(255),
    price numeric,
    description varchar(255),
    quantity int
);


ALTER TABLE tb_product ADD FOREIGN KEY (categoryId) REFERENCES tb_category(id);

