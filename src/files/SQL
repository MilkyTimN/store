SELECT brand, count(*) FROM product_details GROUP BY brand;
SELECT brand FROM product_details ORDER BY price DESC ;
SELECT c.name FROM category_tb c  JOIN product_details ON product_id ORDER BY price;
SELECT quantity, count(*)FROM product_details
group by quantity
ORDER BY quantity;

