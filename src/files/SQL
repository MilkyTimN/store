CREATE TABLE category_tb (
    id SERIAL PRIMARY KEY ,
   name VARCHAR (255)
);
CREATE TABLE product_tb (
    id SERIAL primary key,
    name VARCHAR (255),
    category_id int
);
CREATE TABLE product_details (
    id SERIAL PRIMARY KEY ,
    product_id serial unique,
    brand VARCHAR (255),
    price double precision,
    description VARCHAR (1000),
    quantity INT
);
INSERT INTO category_tb (name) VALUES ('personal computer');
INSERT INTO product_tb (name, category_id) VALUES ('keyboard', 1);

